<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8e24aa"
    android:id="@+id/Activity_Regition_Anbyaa_video_show"
    tools:context="com.app.mohamedgomaa.kids_pj.Anbyaa_Stories.Activity_Regition_Anbyaa_videos_show">
    <LinearLayout
        android:paddingRight="58sp"
        android:paddingLeft="52sp"
        android:paddingTop="40sp"
        android:paddingBottom="50sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_story_activity2">
    <com.google.android.youtube.player.YouTubePlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/youtube_video"
        android:background="#fff"
        />
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_Activity_Anbyaa_Videos_Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_activity_anbyaa_video_show"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"/>
</RelativeLayout>
