<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_dailog"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/d_id_sound"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/audio" />

        <ImageView
            android:id="@+id/d_id_about"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/about" />

        <ImageView
            android:id="@+id/d_id_rate"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginRight="30sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/rate" />

        <ImageView
            android:id="@+id/d_id_msg"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/msg" />
    </LinearLayout>

    <ImageView
        android:id="@+id/d_id_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/close"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>